@model IEnumerable<Shared.Models.AccessoriesModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="video">
            @*<video class="video__media" src="~/images/fon2.mp4" autoplay muted loop asp-append-version="true"></video>*@
        </div>
<link rel="stylesheet" href="~/css/Product.css" asp-append-version="true" />
	
<h1>Accessories</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
    <section class="main-content">
		<div class="container">
			<div class="row">
                

@foreach (var item in Model) {
				<div class="col-lg-4 col-sm-6 mb-3">
					<div class="product-card">
						<div class="product-thumb">
							<a href="#"><img src="~/images/Armor1.jpg" alt=""></a>
						</div>
						<div class="product-details">
                                       
							<h4><a href="#"> @Html.DisplayFor(modelItem => item.Name) </a></h4>
                           

                                @if (true)
                            {

                                <p>
                                    @if (item.AccessoriesType > 0)
                                    {
                                        
                                    <span>
                                        Accessories Type:
                                    </span> 
                                    <span>
                                        @Html.DisplayFor(modelItem => item.AccessoriesType)
                                    </span>}
                                    @if (item.ActiveEffect != string.Empty)
                                    {
                                    <span>
                                        Active Effect:
                                    </span> 
                                    <span>
                                        @Html.DisplayFor(modelItem => item.ActiveEffect)
                                    </span>}
                                    @if (item.Strength > 0)
                                    {
                                    <span>
                                        Strength:
                                    </span> 
                                    <span>
                                        @Html.DisplayFor(modelItem => item.Strength)
                                    </span>}
                                    @if (item.Agility > 0)
                                    {
                                    <span>
                                        Agility:
                                    </span> 
                                    <span>
                                        @Html.DisplayFor(modelItem => item.Agility)
                                    </span>}
                                    @if (item.Endurance > 0)
                                    {
                                    <span>
                                        Endurance:
                                    </span> 
                                    <span>
                                        @Html.DisplayFor(modelItem => item.Endurance)
                                    </span>}
                                    @if (item.Intelligence > 0)
                                    {
                                    <span>
                                        Intelligence:
                                    </span> 
                                    <span>
                                        @Html.DisplayFor(modelItem => item.Intelligence)
                                    </span>}
                                    @if (item.CriticalDamage > 0)
                                    {
                                    <span>
                                        Critical Damage:
                                    </span> 
                                    <span>
                                        @Html.DisplayFor(modelItem => item.CriticalDamage)
                                    </span>}
                                   @* @if (item.Speed > 0)
                                    {*@
                                   @* <span>
                                        Speed:
                                    </span> *@
                                   @* <span>
                                        @Html.DisplayFor(modelItem => item.Speed)
                                    </span>}
                                    @if (item.PhysicalRezist > 0)
                                    {
                                    <span>
                                        Physical Rezist:
                                    </span> 
                                    <span>
                                        @Html.DisplayFor(modelItem => item.PhysicalRezist)
                                    </span>}
                                    @if (item.MagicRezist > 0)
                                    {
                                    <span>
                                        Magic Rezist:
                                    </span> 
                                    <span>
                                        @Html.DisplayFor(modelItem => item.MagicRezist)
                                    </span>}
                                    @if (item.FireRezist > 0)
                                    {
                                    <span>
                                        Fire Rezist:
                                    </span> 
                                    <span>
                                        @Html.DisplayFor(modelItem => item.FireRezist)
                                    </span>}
                                    @if (item.IceRezist > 0)
                                    {
                                    <span>
                                        Ice Rezist:
                                    </span> 
                                    <span>
                                        @Html.DisplayFor(modelItem => item.IceRezist)
                                    </span>}
                                    @if (item.PoisonRezist > 0)
                                    {
                                    <span>
                                        Poison Rezist:
                                    </span> 
                                    <span>
                                        @Html.DisplayFor(modelItem => item.PoisonRezist)
                                    </span>}*@

                                
                                </p>
                                int i = (int) item.Rarity;
                                switch (i)
                                {
                                    case 1:
                                     <span>
                                    Rarity:
                                </span> 
                                <span class="sp1" style = "background-color: grey; border-radius: 6px">
                                    @Html.DisplayFor(modelItem => item.Rarity)
                                </span>
                                        break;
                                     case 2:
                                     <span>
                                    Rarity:
                                </span> 
                                <span class="sp1" style = "background-color: green; border-radius: 6px">
                                    @Html.DisplayFor(modelItem => item.Rarity)
                                </span>
                                        break;
                                     case 3:
                                     <span>
                                    Rarity:
                                </span> 
                                <span class="sp1" style = "background-color: blue; border-radius: 6px">
                                    @Html.DisplayFor(modelItem => item.Rarity)
                                </span>
                                        break;
                                     case 4:
                                     <span>
                                    Rarity:
                                </span> 
                                <span class="sp1" style = "background-color: purple; border-radius: 6px">
                                    @Html.DisplayFor(modelItem => item.Rarity)
                                </span>
                                        break;
                                     case 5:
                                     <span>
                                    Rarity:
                                </span> 
                                <span class="sp1" style = "background-color: yellow; border-radius: 6px">
                                    @Html.DisplayFor(modelItem => item.Rarity)
                                </span>
                                        break;
                                }
                            }
                            <p class="card-text">
                                
                                 @*@Html.ActionLink("Edit", "Edit", "armor" ,new {  id=item.Id  }) |
                                @Html.ActionLink("Details", "Details" , "armor", new {  id=item.Id  }) |
                                @Html.ActionLink("Delete", "delete", "armor", new {  id=item.Id  })*@</p>
							<div class="product-bottom-details d-flex justify-content-between">
								<div class="product-price">
                                    <p>@Html.DisplayFor(modelItem => item.Price)$</p>
								</div>
                                @using (Html.BeginForm("addToCart", "Accessories", FormMethod.Get ,new { Id = item.Id}))
                                {
                                    <div class="pull-right">
                                        @Html.HiddenFor(x => item.Id)
                                        <input type="submit" class="btn btn-success" value="Добавить в корзину" />
                                    </div>
                                }
								<div class="product-links">
									<a href="addToCart/@item.Id"><i class="fas fa-shopping-cart"></i></a>
									<a href="#"><i class="far fa-heart"></i></a>
								</div>
							</div>
						</div>
					</div>
				</div>
                
}    
		    </div>
		</div>
	</section>

