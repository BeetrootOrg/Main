@model Shared.Models.ViewModels.RegisterModel
 <link href="~/css/Login.css" rel ="stylesheet"/>
<link rel="stylesheet" href="~/css/Homepage.css" asp-append-version="true" />

<div class="sidenav"style="overflow: hidden">>

      <div class="login-main-text">
             <p>Welcom to</p>
            <h2>M A G I C ❂ S H O P<br> Join us Hero </h2>
         </div>

   <div class="video">
            <video class="video__media" src="~/images/LoginVideo.mp4" autoplay muted loop asp-append-version="true"></video>
        </div>
     </div>
      <div class="main">
         <div class="col-md-6 col-sm-12">
            <div class="login-form">
               <form asp-action="Register" target="Register" method="post">
                  <div class="form-group">
                     <label asp-for="Email">Введите Email</label><br />
                     <input type="text"class="form-control big-form login-form-margin" placeholder="Email" asp-for="Email" />
                     <span asp-validation-for="Email" />
                  </div>
                  <div class="form-group">
                     <label asp-for="Password">Введите пароль</label>
                     <input type="password" class="form-control big-form login-form-margin" placeholder="Password"asp-for="Password">
                     <span asp-validation-for="Password" />
                  </div>
                  <div class="form-group">
                     <label asp-for="ConfirmPassword">Повторите пароль</label>
                     <input type="password" class="form-control big-form login-form-margin" placeholder="ConfirmPassword"asp-for="ConfirmPassword">
                     <span asp-validation-for="ConfirmPassword" />
                  </div>
                  <button type="submit" class="btn btn-black btn-lg register-button">Register</button>
               </form>
            </div>
         </div>
      </div>
