@model Shared.Models.ViewModels.LoginModel
 
<link href="~/css/Login.css" rel ="stylesheet"/>
<link rel="stylesheet" href="~/css/Homepage.css" asp-append-version="true" />

<div class="sidenav" style="overflow: hidden">>

         <div class="login-main-text">
             <p>Welcom to</p>
            <h2>M A G I C ❂ S H O P<br> Join us Hero </h2>
         </div>

   <div class="video">
            <video class="video__media" src="~/images/LoginVideo.mp4" autoplay muted loop asp-append-version="true"></video>
        </div>

      </div>
      <div class="main">
         <div class="col-md-6 col-sm-12">
            <div class="login-form">
               <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true" method="post">
                  <div class="form-group">
                     <label asp-for="Email">Введите Email</label>
                     <input type="text" class="form-control big-form login-form-margin" asp-for="Email" placeholder="Email">
                     <span asp-validation-for="Email" />
                  </div>
                  <div class="form-group">
                     <label asp-for="Password">Password</label>
                     <input type="password" class="form-control big-form login-form-margin" asp-for="Password" placeholder="Password">
                     <span asp-validation-for="Password" />
                  </div>
                  <button type="submit" class="btn btn-black btn-lg login-registr-button">Login</button>
                  <a href="Register" class="btn btn-secondary btn-lg login-registr-button">Register</a>
               </form>
            </div>
         </div>
      </div>
